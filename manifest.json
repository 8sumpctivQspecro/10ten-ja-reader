{
  "manifest_version": 2,
  "name": "rikaichamp",
  "version": "0.0.1",
  "description": "A port of rikaikun to Web Extensions. Translate Japanese by hovering over words.",
  "icons": { "48": "images/icon48.png",
             "128": "images/icon128.png" },
  "permissions": [
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "images/ba.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file:///*"],
      "js": ["rikaicontent.js"],
      "all_frames":true
    }
  ],
  "web_accessible_resources": [
    "css/popup-black.css",
    "css/popup-blue.css",
    "css/popup-lightblue.css",
    "css/popup-yellow.css"
  ]
}
