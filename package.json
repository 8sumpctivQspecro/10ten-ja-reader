{
  "name": "rikaichamp",
  "version": "0.0.14",
  "description": "Translate Japanese by hovering over words.",
  "scripts": {
    "prepare": "tsc",
    "prepack": "web-ext build --overwrite-dest",
    "test": "web-ext lint && jest && MOZ_HEADLESS=1 slimerjs utils/slimerjs-test-runner.js __tests__/rikaicontent.html",
    "start": "web-ext run --bc --start-url __tests__/playground.html",
    "precommit": "lint-staged",
    "lint": "web-ext lint --source-dir extension",
    "update-db": "node utils/update-db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/birtles/rikaichamp.git"
  },
  "keywords": [
    "rikaichan",
    "rikaikun",
    "japanese",
    "dictionary",
    "translation"
  ],
  "author": "Brian Birtles",
  "bugs": {
    "url": "https://github.com/birtles/rikaichamp/issues"
  },
  "homepage": "https://github.com/birtles/rikaichamp#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "byline": "^5.0.0",
    "iconv-lite": "^0.4.23",
    "jest": "^22.4.3",
    "slimerjs": "git+https://github.com/birtles/slimerjs.git",
    "ts-jest": "^22.4.6",
    "web-ext-types": "github:michael-zapata/web-ext-types"
  },
  "dependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "typescript": "^2.8.3",
    "web-ext": "^2.6.0"
  },
  "webExt": {
    "sourceDir": "extension"
  },
  "jest": {
    "roots": [
      "src",
      "__tests__"
    ],
    "transform": {
      "^.+\\.tsx?$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "/mocha/",
      "/chai/",
      ".*?-tests.js"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
